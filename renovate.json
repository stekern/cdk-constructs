{
  "extends": ["config:base"],
  "automerge": true,
  "automergeType": "branch",
  "major": {
    "automerge": false
  },
  "regexManagers": [
    {
      "fileMatch": ".*\\.ts$",
      "matchStrings": [
        "//\\s*renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\n.*:(?<currentValue>.*?)@(?<currentDigest>sha256:[a-f0-9]+)"
      ]
    }
  ]
}
